    <%- include('includes/footer')%>
    <script>
        let hoverItem;
        $("#knowledge > div > img").hover(function(){
            console.log('hovered')
            const id = $(this).attr("alt")
            $(`#${id}`).attr("hidden",false)
        },function(){
            console.log('mouse left')
            const id = $(this).attr("alt")
            $(`#${id}`).attr("hidden",true)
        })
        
    </script>
