    <main>
        <h2>Skills and Knowledge:</h2>
        <div id="knowledge">
            <div class="knowledge-item">
                <img src="images/icons/javascript.png" alt="JavaScript">
                <div class="icon" id="JavaScript" hidden >JavaScript</div>

            </div>
            <div>
                <img src="images/icons/html.png" alt="HTML">
                <div class="icon" id="HTML" hidden>HTML</div>
            </div>
            <div>
                <img src="images/icons/css.webp" alt="CSS">
